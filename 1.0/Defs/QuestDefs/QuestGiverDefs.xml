<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Industrial and higher give even-chance of all quests.  -->
  <RimQuest.QuestGiverDef>
    <defName>RQ_StandardQuestGiver</defName>
    <techLevels>
      <li>Industrial</li>
      <li>Spacer</li>
      <li>Ultra</li>
      <li>Archotech</li>
    </techLevels>
    <maxOptions>4</maxOptions>
    <anyQuest>true</anyQuest>
  </RimQuest.QuestGiverDef>
  <!-- Medieval quest givers are uninterested in peace talks, but they will often mention stashes and prisoners.-->
  <RimQuest.QuestGiverDef>
    <defName>RQ_MedievalQuestGiver</defName>
    <techLevels>
      <li>Medieval</li>
    </techLevels>
    <quests>
      <Quest_BanditCamp>5</Quest_BanditCamp>
      <Quest_ItemStash>4</Quest_ItemStash>
      <Quest_DownedRefugee>4</Quest_DownedRefugee>
      <Quest_PrisonerRescue>4</Quest_PrisonerRescue>
      <Quest_PeaceTalks>1</Quest_PeaceTalks>
    </quests>
  </RimQuest.QuestGiverDef>
  <!-- Tribal quest givers are more likely to want bandit camps eradicated. -->
  <RimQuest.QuestGiverDef>
    <defName>RQ_TribalQuestGiver</defName>
    <factions>
      <li>TribeCivil</li>
      <li>TribeRough</li>
    </factions>
    <quests>
      <Quest_BanditCamp>8</Quest_BanditCamp>
      <Quest_ItemStash>4</Quest_ItemStash>
      <Quest_PeaceTalks>3</Quest_PeaceTalks>
      <Quest_DownedRefugee>1</Quest_DownedRefugee>
      <Quest_PrisonerRescue>1</Quest_PrisonerRescue>
    </quests>
  </RimQuest.QuestGiverDef>
  <!-- Neolithic quest givers are the same as tribal ones -->
  <RimQuest.QuestGiverDef>
    <defName>RQ_TribalQuestGiver</defName>
    <techLevels>
      <li>Neolithic</li>
    </techLevels>
    <quests>
      <Quest_BanditCamp>10</Quest_BanditCamp>
      <Quest_ItemStash>5</Quest_ItemStash>
      <Quest_PeaceTalks>3</Quest_PeaceTalks>
      <Quest_DownedRefugee>1</Quest_DownedRefugee>
      <Quest_PrisonerRescue>1</Quest_PrisonerRescue>
    </quests>
  </RimQuest.QuestGiverDef>
  <!-- Animals, undefined types will only have item stash and downed refugees. -->
  <RimQuest.QuestGiverDef>
    <defName>RQ_AnimalQuestGiver</defName>
    <techLevels>
      <li>Animal</li>
      <li>Neolithic</li>
    </techLevels>
    <quests>
      <Quest_ItemStash>1</Quest_ItemStash>
      <Quest_DownedRefugee>1</Quest_DownedRefugee>
    </quests>
  </RimQuest.QuestGiverDef>
</Defs>
